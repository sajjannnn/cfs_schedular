{
    "configurations": [
        {
            "name": "Linux",
            "intelliSenseMode": "linux-gcc-arm64",
            "compilerPath": "/usr/bin/aarch64-linux-gnu-gcc",
            "includePath": [
                "${workspaceFolder}/**",           
                "/usr/include",                   
                "/usr/local/include",             
                "/usr/include/aarch64-linux-gnu", 
                "/usr/lib/gcc/aarch64-linux-gnu/13/include" 
            ],
            "defines": [
                "DEBUG",                           
                "_GNU_SOURCE"                      
            ],
            "cStandard": "c11",                   
            "cppStandard": "c++17",               
            "browse": {
                "path": [
                    "${workspaceFolder}/**",       
                    "/usr/include",
                    "/usr/local/include"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "compilerArgs": [
                "-march=armv8-a",                  // Target architecture
                "-Wall",                           // Enable warnings
                "-Wextra",                         // Enable extra warnings
                "-DDEBUG"                          // Define debug macro
            ]
        }
    ],
    "version": 4
}